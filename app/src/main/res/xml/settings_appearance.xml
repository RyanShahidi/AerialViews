<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

        <PreferenceCategory app:title="@string/category_options">
                <CheckBoxPreference
                    app:defaultValue="false"
                    app:key="alt_text_position"
                    app:summary="@string/appearance_alt_text_position_summary"
                    app:title="@string/appearance_alt_text_position_title" />

                <Preference
                    app:title="@string/appearance_gradient_title"
                    app:summary="@string/appearance_gradient_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.AppearanceGradientFragment"/>

                <Preference
                    app:title="@string/appearance_animations_title"
                    app:summary="@string/appearance_animations_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.AppearanceAnimationsFragment"/>

                <Preference
                    app:title="@string/appearance_brightness_title"
                    app:summary="@string/appearance_brightness_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.AppearanceBrightnessFragment"/>

                <Preference
                    app:title="@string/appearance_startup_title"
                    app:summary="@string/appearance_startup_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.AppearanceStartupFragment"/>

                <Preference
                    app:title="@string/appearance_typography_title"
                    app:summary="@string/appearance_typography_summary"
                    app:fragment="com.neilturner.aerialviews.ui.settings.AppearanceTypographyFragment"/>
