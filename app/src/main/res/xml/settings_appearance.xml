<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <PreferenceCategory app:title="@string/category_appearance">

                <Preference
                    app:title="@string/appearance_clock_title"
                    app:fragment="com.neilturner.aerialviews.ui.settings.AppearanceClockFragment"/>

                <Preference
                    app:title="@string/appearance_location_title"
                    app:fragment="com.neilturner.aerialviews.ui.settings.AppearanceLocationFragment"/>
        </PreferenceCategory>

        <PreferenceCategory app:title="@string/category_other">
                <CheckBoxPreference
                    app:defaultValue="false"
                    app:key="alt_text_position"
                    app:summary="@string/appearance_alt_text_position_summary"
                    app:title="@string/appearance_alt_text_position_title" />

                <CheckBoxPreference
                    app:defaultValue="true"
                    app:key="any_videos_filename_location"
                    app:title="@string/any_videos_filename_location_title"
                    app:summary="@string/any_videos_filename_location_summary" />
        </PreferenceCategory>
</PreferenceScreen>
