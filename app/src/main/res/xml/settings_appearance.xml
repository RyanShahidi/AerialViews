<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <PreferenceCategory app:title="@string/category_clock">

                <CheckBoxPreference
                    app:defaultValue="true"
                    app:key="show_clock"
                    app:summary="@string/interface_show_clock_summary"
                    app:title="@string/interface_show_clock_title" />

                <Preference
                    app:title="@string/settings_appearance_clock_title"
                    app:fragment="com.neilturner.aerialviews.ui.settings.AppearanceClockFragment"/>
        </PreferenceCategory>

        <PreferenceCategory app:title="@string/category_location">
                <ListPreference
                    app:defaultValue="@string/interface_show_location_default"
                    app:entries="@array/interface_show_location_entries"
                    app:entryValues="@array/interface_show_location_values"
                    app:key="location_style"
                    app:title="@string/interface_show_location_title"
                    app:dialogTitle="@string/interface_show_location_title"
                    app:useSimpleSummaryProvider="true" />

                <Preference
                    app:title="@string/settings_appearance_location_title"
                    app:fragment="com.neilturner.aerialviews.ui.settings.AppearanceLocationFragment"/>
        </PreferenceCategory>

        <PreferenceCategory app:title="@string/category_other">
                <CheckBoxPreference
                    app:defaultValue="false"
                    app:key="alt_text_position"
                    app:summary="@string/interface_alt_text_position_summary"
                    app:title="@string/interface_alt_text_position_title" />

                <CheckBoxPreference
                    app:defaultValue="true"
                    app:key="any_videos_filename_location"
                    app:title="@string/any_videos_filename_location_title"
                    app:summary="@string/any_videos_filename_location_summary" />
        </PreferenceCategory>
</PreferenceScreen>
