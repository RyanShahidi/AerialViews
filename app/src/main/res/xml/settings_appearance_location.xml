<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <PreferenceCategory app:title="Apple and Community videos">
                <ListPreference
                    app:defaultValue="@string/interface_show_location_default"
                    app:entries="@array/interface_show_location_entries"
                    app:entryValues="@array/interface_show_location_values"
                    app:key="location_style"
                    app:title="@string/appearance_show_location_title"
                    app:dialogTitle="@string/appearance_show_location_title"
                    app:useSimpleSummaryProvider="true" />
        </PreferenceCategory>

        <PreferenceCategory app:title="Other videos">
                <CheckBoxPreference
                    app:defaultValue="true"
                    app:key="any_videos_filename_location"
                    app:title="@string/any_videos_filename_location_title"
                    app:summary="@string/any_videos_filename_location_summary" />
        </PreferenceCategory>

        <PreferenceCategory app:title="Options">
                <ListPreference
                    app:defaultValue="@string/appearance_location_size_default"
                    app:entries="@array/appearance_location_size_entries"
                    app:entryValues="@array/appearance_location_size_values"
                    app:key="location_size"
                    app:title="@string/appearance_location_size_title"
                    app:useSimpleSummaryProvider="true" />
        </PreferenceCategory>
</PreferenceScreen>
